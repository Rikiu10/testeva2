<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Testeva2">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Testeva2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".menus.ActivityLedRange"
            android:label="Rangos de Alerta"
            android:theme="@style/Theme.Testeva2"/>

        <activity android:name=".menus.ActivityTimeRange"
            android:label="Rangos Horarios"
            android:theme="@style/Theme.Testeva2"/>

        <activity android:name=".menus.ActivityHistory"
            android:label="Historial de Eventos"
            android:theme="@style/Theme.Testeva2"/>

        <activity android:name=".menus.ActivityCriticalContacts"
            android:label="Contactos de Emergencia"
            android:theme="@style/Theme.Testeva2"/>

    </application>

</manifest>